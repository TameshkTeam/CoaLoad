    <Design.DataContext>
    <!-- This only sets the DataContext for the previewer in an IDE,
         to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs) -->
    <vm:MainViewModel />
  </Design.DataContext>
    
    <Panel>
        
        <Popup Name="NotificationPopup" IsOpen="false" Placement="Top" PlacementTarget="{Binding ElementName=UrlInputBox}" HorizontalAlignment="Center">
            <Border Background="#191919" BorderBrush="Black" BorderThickness="1" CornerRadius="5" Padding="10">
                <StackPanel Orientation="Vertical" Spacing="5">
                    <TextBlock Name="NotificationMessage" Foreground="White" FontWeight="Bold" />
                    <ProgressBar Name="NotificationProgressBar" Width="100" Height="1" Minimum="0" Maximum="3000" Value="3000" Foreground="DarkRed"/>
                </StackPanel>
            </Border>
        </Popup>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="20">
            <Button Content="Settings" Click="SettingsButton_OnClick" HorizontalAlignment="Center"/>
            <Border Width="150" Height="150" CornerRadius="75">
                <Image Source="avares://CoaLoad/Assets/cobalt.png"></Image>
            </Border>


            <Grid Width="300" Height="35">
                <TextBox Watermark="Paste the link here" TextAlignment="Center" Background="#1E1E1E" Foreground="White"
                         BorderBrush="#383838" BorderThickness="2" CornerRadius="11" Name="UrlInputBox"
                         VerticalAlignment="Stretch" HorizontalAlignment="Stretch" />
                <Button Width="35" Height="35" Background="#1E1E1E" BorderBrush="#383838" BorderThickness="2"
                        CornerRadius="11" Click="ClipboardButtonClicked" Margin="0" VerticalAlignment="Center"
                        HorizontalAlignment="Right">
                    <Viewbox MaxHeight="20">
                        <Path Fill="White" Data="{StaticResource clipboard_link_regular}" />
                    </Viewbox>
                </Button>
            </Grid>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="10">

<ToggleButton Width="80" BorderBrush="Gray" BorderThickness="1" CornerRadius="5" ClickMode="Release" Click="AutoButton_OnClick" Name="AutoButton" IsChecked="True">
    <ToggleButton.Styles>
        <!-- https://stackoverflow.com/questions/77196387/how-to-set-the-background-colour-of-a-checked-toggle-button-in-avalonia-ui-deskt -->
        <Style Selector="ToggleButton">
            <Setter Property="Background" Value="#191919" />
            <Setter Property="Foreground" Value="#e1e1e1" />
        </Style>
        <Style Selector="ToggleButton:checked /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="#e1e1e1" />
            <Setter Property="Foreground" Value="Black" />
        </Style>
    </ToggleButton.Styles>
    <StackPanel Orientation="Horizontal" Spacing="5">
        <Viewbox MaxHeight="20" Stretch="Uniform">
            <Path Name="AutoIcon" Fill="Black" Data="{StaticResource star_emphasis_regular}" />
        </Viewbox>
        <TextBlock Text="Auto" VerticalAlignment="Center" FontWeight="SemiBold"/>
    </StackPanel>
</ToggleButton>

<ToggleButton Width="80" BorderBrush="Gray" BorderThickness="1" CornerRadius="5" ClickMode="Release" Click="AudioButton_OnClick" Name="AudioButton">
    <ToggleButton.Styles>
        <Style Selector="ToggleButton">
            <Setter Property="Background" Value="#191919" />
            <Setter Property="Foreground" Value="#e1e1e1" />
        </Style>
        <Style Selector="ToggleButton:checked /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="#e1e1e1" />
            <Setter Property="Foreground" Value="Black" />
        </Style>
    </ToggleButton.Styles>
    <StackPanel Orientation="Horizontal" Spacing="5">
        <Viewbox MaxHeight="20" Stretch="Uniform">
            <Path Name="AudioIcon" Fill="White" Data="{StaticResource music_regular}" />
        </Viewbox>
        <TextBlock Text="Audio" VerticalAlignment="Center" FontWeight="SemiBold"/>
    </StackPanel>
</ToggleButton>

<ToggleButton Width="80" BorderBrush="Gray" BorderThickness="1" CornerRadius="5" ClickMode="Release" Click="MuteButton_OnClick" Name="MuteButton">
    <ToggleButton.Styles>
        <Style Selector="ToggleButton">
            <Setter Property="Background" Value="#191919" />
            <Setter Property="Foreground" Value="#e1e1e1" />
        </Style>
        <Style Selector="ToggleButton:checked /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="#e1e1e1" />
            <Setter Property="Foreground" Value="Black" />
        </Style>
    </ToggleButton.Styles>
    <StackPanel Orientation="Horizontal" Spacing="5">
        <Viewbox MaxHeight="20" Stretch="Uniform">
            <Path Name="MuteIcon" Fill="White" Data="{StaticResource speaker_off_regular}" />
        </Viewbox>
        <TextBlock Text="Mute" VerticalAlignment="Center" FontWeight="SemiBold"/>
    </StackPanel>
</ToggleButton>
            </StackPanel>

            <Button
                    Width="300"
                    HorizontalAlignment="Center"
                    Background="#282828"
                    Foreground="White"
                    BorderBrush="Gray"
                    BorderThickness="1"
                    CornerRadius="11"
                    Click="DownloadButtonClicked">
                <TextBlock Text="Download" HorizontalAlignment="Center"/>
            </Button>

        </StackPanel>
    </Panel>
    
</UserControl>
