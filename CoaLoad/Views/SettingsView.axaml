<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="CoaLoad.Views.SettingsView"
             xmlns:vm="clr-namespace:CoaLoad.ViewModels"
             x:DataType="vm:SettingsViewModel">

    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="10">
        <TextBlock Text="Settings" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center"/>

        <TextBlock Text="Download Path:" />
        <TextBox Text="dd" Width="300"/>

        <TextBlock Text="Auto Download:" />
        <CheckBox IsChecked="True" />

        <TextBlock Text="Max Connections:" />
        <NumericUpDown Value="21" Width="100"/>

        <Button Content="Save" Click="SaveButton_Click" HorizontalAlignment="Center"/> 
    </StackPanel>
</UserControl>